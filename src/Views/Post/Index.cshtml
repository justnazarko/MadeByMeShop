@model IEnumerable<MadeByMe.src.Models.Post>

@{
    ViewData["Title"] = "Каталог товарів";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1>Каталог товарів</h1>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Додати товар
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@post.PhotoLink" class="card-img-top" alt="@post.Title">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@(post.Description.Length > 100 ? post.Description.Substring(0, 100) + "..." : post.Description)</p>
                        <p class="font-weight-bold">@post.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-primary">Деталі</a>
                        <a asp-controller="Cart" asp-action="AddPost" asp-route-postId="@post.Id" class="btn btn-outline-success">
                            <i class="fas fa-cart-plus"></i> В кошик
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>