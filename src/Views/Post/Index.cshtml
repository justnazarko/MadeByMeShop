@model IEnumerable<MadeByMe.src.Models.Post>

    @{
    ViewData["Title"] = "Список товарів";
    }

    <h1>Список товарів</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Опис</th>
                <th>Ціна</th>
                <th>Фото</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Description</td>
                <td>@post.Price</td>
                <td><img src="@post.PhotoLink" alt="@post.Title" style="width:100px;" /></td>
                <td>
                    <a asp-action="Details" asp-route-id="@post.Id">Деталі</a> |
                    <a asp-action="Edit" asp-route-id="@post.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@post.Id">Видалити</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-success">Додати новий товар</a>
