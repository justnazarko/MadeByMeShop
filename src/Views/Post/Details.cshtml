@model MadeByMe.src.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.PhotoLink" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h1>@Model.Title</h1>
            <p class="text-muted">
                Категорія: @(Model.Category?.Name ?? "Без категорії")
            </p>
            <p class="h4 text-primary">@Model.Price.ToString("C")</p>
            <hr>
            <p>@Model.Description</p>

            <div class="mt-4">
                <a asp-controller="Cart" asp-action="AddPost" asp-route-postId="@Model.Id"
                   class="btn btn-primary btn-lg">
                    <i class="fas fa-cart-plus"></i> Додати до кошика
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">Назад до каталогу</a>
            </div>
        </div>
    </div>

    <!-- Коментарі -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Коментарі</h3>
            @await Component.InvokeAsync("Comments", new { postId = Model.Id })

            @if (User.Identity.IsAuthenticated)
            {
                <partial name="_AddComment" model="new MadeByMe.src.DTOs.CreateCommentDto { PostId = Model.Id }" />
            }
            else
            {
                <div class="alert alert-info">
                    Будь ласка, <a asp-controller="User" asp-action="Login">увійдіть</a>, щоб залишити коментар.
                </div>
            }
        </div>
    </div>
</div>