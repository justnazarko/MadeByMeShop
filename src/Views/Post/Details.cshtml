@model MadeByMe.src.ViewModels.PostDetailsViewModel

@{
    ViewData["Title"] = Model.Post.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Post.PhotoLink" class="img-fluid rounded" alt="@Model.Post.Title">
        </div>
        <div class="col-md-6">
            <h1>@Model.Post.Title</h1>
            <p class="text-muted">
                Категорія: @(Model.Post.Category?.Name ?? "Без категорії")
            </p>
            <p class="h4 text-primary">@Model.Post.Price.ToString("C")</p>
            <hr>
            <p>@Model.Post.Description</p>

            <div class="mt-4">
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="PostId" value="@Model.Post.Id" />
                    <input type="hidden" name="Quantity" value="1" />
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-cart-plus"></i> Додати до кошика
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">Назад до каталогу</a>
                <a asp-action="Edit" asp-route-id="@Model.Post.Id" class="btn btn-outline-secondary">Редагувати пост</a>
                <a asp-action="Delete" asp-route-id="@Model.Post.Id" class="btn btn-outline-secondary">Видалити пост</a>
            </div>
        </div>
    </div>

   
    <h2>Коментарі:</h2>

    @if (Model.CommentsList != null && Model.CommentsList.Any())
    {
        foreach (var comment in Model.CommentsList)
        {
            <div class="comment">
                <p><strong>@comment.User.UserName</strong> (@comment.CreatedAt.ToShortDateString()):</p>
                <p>@comment.Content</p>
                @if (User.Identity.IsAuthenticated &&
               (User.IsInRole("Admin") || comment.User.UserName == User.Identity.Name))
                {
                    <form asp-action="Delete" asp-controller="Comment" asp-route-id="@comment.CommentId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Видалити</button>
                    </form>
                }

            </div>

        }
    }
    else
    {
        <p>Ще немає коментарів.</p>
    }

    <hr />

    @if (User.Identity.IsAuthenticated)
    {
        <h3>Додати коментар:</h3>

        <form asp-action="Create" asp-controller="Comment" method="post">
            <input type="hidden" name="PostId" value="@Model.Post.Id" />

            <div class="form-group">
                <label for="Content">Коментар</label>
                <textarea name="Content" class="form-control" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Надіслати</button>
        </form>

    }
    else
    {
        <p><a asp-controller="Account" asp-action="Login">Увійдіть</a>, щоб залишити коментар.</p>
    }

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
