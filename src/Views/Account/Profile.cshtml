@model MadeByMe.src.Models.ApplicationUser

@{
    ViewData["Title"] = "Ваш профіль";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Профіль - MadeByMe</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-orange-700 hover:text-orange-800 transition-colors">MadeByMe</a>
            <nav class="space-x-4">
                <a href="/" class="text-gray-600 hover:text-orange-600">Головна</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Account/Profile" class="text-orange-600 font-medium">Профіль</a>
                    <a href="/Cart" class="text-gray-600 hover:text-orange-600">Кошик</a>
                    @if (!User.IsInRole("Seller"))
                    {
                        <form action="/Account/BecomeSeller" method="post" class="inline">
                            <button type="submit" class="text-yellow-600 hover:text-yellow-700">Стати продавцем</button>
                        </form>
                    }
                    <form action="/Account/Logout" method="post" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700">Вийти</button>
                    </form>
                }
                else
                {
                    <a href="/Account/Login" class="text-orange-600 font-medium hover:underline">Увійти</a>
                    <a href="/Account/Register" class="bg-orange-600 text-white px-3 py-1 rounded hover:bg-orange-700 transition">Реєстрація</a>
                }
            </nav>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Profile Header -->
            <div class="relative h-48 bg-gradient-to-br from-orange-400 via-orange-500 to-rose-500 before:absolute before:inset-0 before:bg-[radial-gradient(circle_at_50%_120%,rgba(255,255,255,0.1),rgba(255,255,255,0))] before:opacity-60">
                <div class="absolute -bottom-16 left-8">
                    <div class="relative">
                        <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")" 
                             class="w-32 h-32 rounded-full border-4 border-white shadow-lg object-cover" 
                             alt="Профільне фото" />
                        <a href="/Account/EditProfile" 
                           class="absolute bottom-0 right-0 bg-gradient-to-br from-orange-500 to-orange-600 text-white p-2 rounded-full shadow-lg hover:from-orange-600 hover:to-orange-700 transition-all duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="pt-20 pb-8 px-8">
                <div class="flex justify-between items-start mb-8">
                    <div>
                        <h2 class="text-3xl font-bold text-gray-800">@Model.UserName</h2>
                        <p class="text-gray-600">@Model.Email</p>
                    </div>
                    @if (User.IsInRole("Seller"))
                    {
                        <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium">
                            Продавець
                        </span>
                    }
                </div>

                <!-- Profile Details -->
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="space-y-6">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Контактна інформація</h3>
                            <div class="space-y-4">
                                <div class="flex items-center text-gray-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                    </svg>
                                    <span>@Model.Email</span>
                                </div>
                                <div class="flex items-center text-gray-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                                    </svg>
                                    <span>@Model.PhoneNumber</span>
                                </div>
                            </div>
                        </div>

                        @if (!User.IsInRole("Seller"))
                        {
                            <div class="pt-4">
                                <form action="/Account/BecomeSeller" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" 
                                            class="bg-yellow-500 text-white px-6 py-2 rounded-lg hover:bg-yellow-600 transition duration-200 flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                                        </svg>
                                        Стати продавцем
                                    </button>
                                </form>
                            </div>
                        }
                    </div>

                    <!-- Activity Section -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Активність</h3>
                        <div class="bg-gray-50 rounded-lg p-6">
                            <div class="space-y-4">
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-600">Замовлень</span>
                                    <span class="font-semibold">0</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-600">Відгуків</span>
                                    <span class="font-semibold">0</span>
                                </div>
                                @if (User.IsInRole("Seller"))
                                {
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-600">Продажів</span>
                                        <span class="font-semibold">0</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>


