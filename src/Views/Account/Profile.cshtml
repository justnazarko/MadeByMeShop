@model MadeByMe.src.Models.ApplicationUser

@{
    ViewData["Title"] = "Ваш профіль";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")" class="card-img-top" alt="Аватар">
                <div class="card-body text-center">
                    <h5 class="card-title">@Model.UserName</h5>
                    <p class="text-muted">@Model.Email</p>
                    <a asp-action="Edit" class="btn btn-outline-primary">Редагувати профіль</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h3>Ваші замовлення</h3>
            <!-- Тут можна додати історію замовлень -->
        </div>
    </div>
</div>