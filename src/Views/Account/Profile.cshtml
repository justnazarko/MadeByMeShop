@model MadeByMe.src.Models.ApplicationUser

@{
    ViewData["Title"] = "Ваш профіль";
}

<h2>Профіль користувача</h2>

<div class="card mt-3 p-3">
    <dl class="row">

        <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")" class="card-img-top" alt="Аватар">

        <dt class="col-sm-3">Ім’я</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <a asp-action="EditProfile" asp-controller="Account" class="btn btn-primary">Редагувати профіль</a>

    @if (User.IsInRole("Seller"))
    {
        <p class="mt-2 text-success">Ваша роль: Продавець</p>
    }
    else
    {
        <form method="post" asp-action="BecomeSeller" asp-controller="Account">
            <button type="submit" class="btn btn-warning mt-2">Стати продавцем</button>
        </form>
    }
</div>


