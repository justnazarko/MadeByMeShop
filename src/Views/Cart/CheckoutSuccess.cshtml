@{
    ViewData["Title"] = "Дякуємо за покупку";
}

@Html.AntiForgeryToken()

<div class="success-page">
    <div class="success-content">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 class="success-title">Дякуємо за покупку!</h1>
        <div class="success-message">
            <p>Ваше замовлення успішно оформлено та прийнято до обробки.</p>
            <p>Ми надіслали підтвердження на вашу електронну пошту.</p>
            <p>Наш менеджер зв'яжеться з вами найближчим часом.</p>
        </div>
        <div class="success-buttons">
            <a asp-controller="Home" asp-action="Index" class="btn-home">
                <i class="fas fa-home"></i>
                <span>На головну</span>
            </a>
            <a href="javascript:void(0)" onclick="clearCartAndRedirect()" class="btn-orders">
                <i class="fas fa-shopping-bag"></i>
                <span>Мої замовлення</span>
            </a>
        </div>
    </div>
</div>

<script>
    function clearCartAndRedirect() {
        // Очищаємо корзину через AJAX запит
        fetch('/Cart/ClearCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            }
        }).then(() => {
            // Після очищення корзини переходимо на сторінку замовлень
            window.location.href = '/Cart/Index';
        });
    }
</script>

<style>
    .success-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #fff5f0 0%, #fff 100%);
        padding: 20px;
    }

    .success-content {
        background: white;
        padding: 3rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(255, 140, 0, 0.1);
        text-align: center;
        max-width: 600px;
        width: 100%;
        animation: slideUp 0.8s ease-out;
    }

    .success-icon {
        margin-bottom: 2rem;
    }

    .success-icon i {
        font-size: 6rem;
        color: #ff8c00;
        animation: bounceIn 1s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    .success-title {
        color: #ff8c00;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        font-weight: 700;
        animation: fadeIn 0.8s ease-out 0.3s both;
    }

    .success-message {
        margin-bottom: 2.5rem;
        animation: fadeIn 0.8s ease-out 0.6s both;
    }

    .success-message p {
        color: #666;
        font-size: 1.1rem;
        margin: 0.5rem 0;
        line-height: 1.6;
    }

    .success-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        animation: fadeIn 0.8s ease-out 0.9s both;
    }

    .success-buttons a {
        padding: 1rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-home {
        background: #ff8c00;
        color: white;
    }

    .btn-orders {
        background: white;
        color: #ff8c00;
        border: 2px solid #ff8c00;
    }

    .success-buttons a:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 140, 0, 0.2);
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }
        50% {
            opacity: 0.9;
            transform: scale(1.1);
        }
        80% {
            opacity: 1;
            transform: scale(0.89);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@media (max-width: 576px) {
        .success-content {
            padding: 2rem;
        }

        .success-buttons {
            flex-direction: column;
        }

        .success-title {
            font-size: 2rem;
        }
    }
</style>