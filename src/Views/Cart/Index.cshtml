@model MadeByMe.src.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Ваш кошик";
}

<div class="container">
    <h1>Ваш кошик</h1>

    @if (Model?.Items?.Any() == true)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Товар</th>
                    <th>Ціна</th>
                    <th>Кількість</th>
                    <th>Сума</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.PricePerItem.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Total.ToString("C"))</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="postId" value="@item.PostId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                            
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">Загальна сума:</th>
                    <th>@Model.TotalPrice.ToString("C")</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <form asp-action="Checkout" method="post">
                <button type="submit" class="btn btn-success">Оформити замовлення</button>
            </form>

            <a asp-controller="Post" asp-action="Index" class="btn btn-outline-secondary">Назад до каталогу</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Ваш кошик порожній. <a asp-controller="Post" asp-action="Index">Перейти до каталогу</a>
        </div>
    }
</div>