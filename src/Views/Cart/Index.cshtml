@model MadeByMe.src.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Кошик";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Кошик - MadeByMe</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-orange-700 hover:text-orange-800 transition-colors">MadeByMe</a>
            <nav class="space-x-4">
                <a href="/" class="text-gray-600 hover:text-orange-600">Головна</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Account/Profile" class="text-gray-600 hover:text-orange-600">Профіль</a>
                    <a href="/Cart" class="text-orange-600 font-medium">Кошик</a>
                    @if (!User.IsInRole("Seller"))
                    {
                        <form action="/Account/BecomeSeller" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="text-yellow-600 hover:text-yellow-700">Стати продавцем</button>
                        </form>
                    }
                    <form action="/Account/Logout" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-red-600 hover:text-red-700">Вийти</button>
                    </form>
                }
                else
                {
                    <a href="/Account/Login" class="text-orange-600 font-medium hover:underline">Увійти</a>
                    <a href="/Account/Register" class="bg-orange-600 text-white px-3 py-1 rounded hover:bg-orange-700 transition">Реєстрація</a>
                }
            </nav>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-800">Кошик</h2>
            <span class="text-gray-600">@Model.ItemCount товарів</span>
        </div>

        @if (Model.Items?.Any() == true)
        {
            <div class="grid lg:grid-cols-3 gap-8">
                <!-- Cart Items -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                        <div class="divide-y divide-gray-200">
                            @foreach (var item in Model.Items)
                            {
                                <div class="p-6 flex items-center space-x-4">
                                    <img src="@item.Product.ImageUrl" 
                                         alt="@item.Product.Name" 
                                         class="w-24 h-24 object-cover rounded-lg" />
                                    
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-800">@item.Product.Name</h3>
                                        <p class="text-gray-600">Продавець: @item.Product.Seller.UserName</p>
                                        <div class="mt-2 flex items-center space-x-4">
                                            <form action="/Cart/UpdateQuantity" method="post" class="flex items-center border rounded-lg">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" name="action" value="decrease" class="px-3 py-1 text-gray-600 hover:bg-gray-100">-</button>
                                                <span class="px-3 py-1">@item.Quantity</span>
                                                <button type="submit" name="action" value="increase" class="px-3 py-1 text-gray-600 hover:bg-gray-100">+</button>
                                            </form>
                                            <span class="text-lg font-semibold text-orange-600">@(item.Product.Price * item.Quantity) ₴</span>
                                        </div>
                                    </div>
                                    
                                    <form action="/Cart/RemoveFromCart" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="postId" value="@item.ProductId" />
                                        <button type="submit" class="text-red-600 hover:text-red-700 p-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-2xl shadow-lg p-6 sticky top-24">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4">Підсумок замовлення</h3>
                        
                        <div class="space-y-4">
                            <div class="flex justify-between text-gray-600">
                                <span>Товари (@Model.ItemCount)</span>
                                <span>@Model.TotalPrice ₴</span>
                            </div>
                            <div class="flex justify-between text-gray-600">
                                <span>Доставка</span>
                                <span>Безкоштовно</span>
                            </div>
                            <div class="border-t pt-4">
                                <div class="flex justify-between text-lg font-semibold">
                                    <span>Разом</span>
                                    <span class="text-orange-600">@Model.TotalPrice ₴</span>
                                </div>
                            </div>
                        </div>

                        <form action="/Cart/Checkout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="w-full mt-6 bg-orange-600 text-white py-3 rounded-lg hover:bg-orange-700 transition duration-200">
                                Оформити замовлення
                            </button>
                        </form>

                        <div class="mt-4 text-center">
                            <a href="/" class="text-orange-600 hover:text-orange-700 text-sm">
                                Продовжити покупки
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <h3 class="mt-4 text-xl font-semibold text-gray-800">Ваш кошик порожній</h3>
                <p class="mt-2 text-gray-600">Додайте товари до кошика, щоб зробити замовлення</p>
                <a href="/" class="mt-6 inline-block bg-orange-600 text-white px-6 py-3 rounded-lg hover:bg-orange-700 transition duration-200">
                    Перейти до покупок
                </a>
            </div>
        }
    </div>

</body>
</html>