<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MadeByMe</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script>
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        }
    </script>
</head>
<body class="bg-gray-50 text-gray-800">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <a href="/" class="text-2xl font-bold text-orange-700 hover:text-orange-800 transition-colors">MadeByMe</a>
                
                <!-- Mobile menu button -->
                <button class="md:hidden text-gray-600 hover:text-orange-600 focus:outline-none" onclick="toggleMobileMenu()">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex space-x-4">
                    <a href="/" class="text-gray-600 hover:text-orange-600">Головна</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Account/Profile" class="text-gray-600 hover:text-orange-600">Профіль</a>
                        <a href="/Cart" class="text-gray-600 hover:text-orange-600">Кошик</a>
                        @if (!User.IsInRole("Seller"))
                        {
                            <form action="/Account/BecomeSeller" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-yellow-600 hover:text-yellow-700">Стати продавцем</button>
                            </form>
                        }
                        <form action="/Account/Logout" method="post" class="inline">
                            <button type="submit" class="text-red-600 hover:text-red-700">Вийти</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Account/Login" class="text-orange-600 font-medium hover:underline">Увійти</a>
                        <a href="/Account/Register" class="bg-orange-600 text-white px-3 py-1 rounded hover:bg-orange-700 transition">Реєстрація</a>
                    }
                </nav>
            </div>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
                <nav class="flex flex-col space-y-3">
                    <a href="/" class="text-gray-600 hover:text-orange-600 py-2">Головна</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Account/Profile" class="text-gray-600 hover:text-orange-600 py-2">Профіль</a>
                        <a href="/Cart" class="text-gray-600 hover:text-orange-600 py-2">Кошик</a>
                        @if (!User.IsInRole("Seller"))
                        {
                            <form action="/Account/BecomeSeller" method="post" class="py-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-yellow-600 hover:text-yellow-700 w-full text-left">Стати продавцем</button>
                            </form>
                        }
                        <form action="/Account/Logout" method="post" class="py-2">
                            <button type="submit" class="text-red-600 hover:text-red-700 w-full text-left">Вийти</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Account/Login" class="text-orange-600 font-medium hover:underline py-2">Увійти</a>
                        <a href="/Account/Register" class="bg-orange-600 text-white px-3 py-2 rounded hover:bg-orange-700 transition text-center">Реєстрація</a>
                    }
                </nav>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-auto">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="text-center text-gray-600">
                <p>&copy; @DateTime.Now.Year - MadeByMe - Всі права захищені</p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
